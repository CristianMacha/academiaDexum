---
import { Image } from "astro:assets";

interface Props {
    imageUrl: ImageMetadata;
    name: string;
    tag: string;
    description: string;
}

const { imageUrl, name, tag, description } = Astro.props;
---

<div>
    <div class="w-[323px] flex flex-col gap-4">
        <Image src={imageUrl} alt={name} class="w-full h-[265px] rounded-md" />
        <div class="flex flex-col gap-1">
            <h5 class="text-xl text-gray-800 font-medium">{name}</h5>
            <span class="text-base text-primary font-normal">{tag}</span>
            <p class="text-base text-gray-700 font-normal">{description}</p>
        </div>
    </div>
</div>

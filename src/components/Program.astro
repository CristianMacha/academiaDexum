---
import { Image } from "astro:assets";

interface Props {
    imageUrl: ImageMetadata;
    tagName: string;
    title: string;
    description: string;
}

const { imageUrl, tagName, title, description } = Astro.props;
---

<div class="border rounded-md p-4 flex flex-col gap-5 w-full lg:w-[438px]">
    <Image
        src={imageUrl}
        alt="programa uno"
        class="w-full h-[208px] rounded-md"
    />
    <div>
        <span class="text-xs text-primary">{tagName}</span>
        <h4 class="text-2xl font-semibold text-gray-800">{title}</h4>
    </div>
    <p class="text-base font-normal text-gray-700">{description}</p>
    <div>
        <button
            class="px-6 py-3 rounded-md bg-primary text-white w-full md:w-auto"
            >Mas informaci√≥n</button
        >
    </div>
</div>
